{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.bar.json",
    "monitor": 0,
    "font_family": "JetBrains Mono",
    "height": 32,
    "max_label_width": 120.0,
    "grouping": {
        "kind": "Alignment",
        "rounding": 10.0,
        "transparency_alpha": 155
    },
    "transparency": true,
    "transparency_alpha": 10,
    "theme": {
        "palette": "Base16",
        "name": "OneLight",
        "accent": "Base0D"
    },
    "center_widgets": [
        {
            "Update": {
                "enable": false
            }
        },
        {
            "Media": {
                "enable": false
            }
        },
        {
            "Storage": {
                "enable": false
            }
        },
        {
            "Memory": {
                "enable": false
            }
        },
        {
            "Date": {
                "enable": true,
                "format": "DayDateMonthYear"
            }
        },
        {
            "Time": {
                "enable": true,
                "format": "TwentyFourHourWithoutSeconds",
                "changing_icon": true
            }
        }
    ],
    "left_widgets": [
        {
            "Komorebi": {
                "workspaces": {
                    "enable": true,
                    "hide_empty_workspaces": false
                },
                "layout": {
                    "enable": true,
                    "display": "Icon"
                },
                "focused_window": {
                    "enable": true,
                    "show_icon": true
                }
            }
        }
    ],
    "right_widgets": [
        {
            "Update": {
                "enable": false
            }
        },
        {
            "Media": {
                "enable": true
            }
        },
        {
            "Storage": {
                "enable": false
            }
        },
        {
            "Memory": {
                "enable": true
            }
        },
        {
            "Network": {
                "enable": true,
                "show_activity": false,
                "show_total_activity": false
            }
        },
        {
            "Date": {
                "enable": false,
                "format": "DayDateMonthYear"
            }
        },
        {
            "Time": {
                "enable": false,
                "format": "TwentyFourHour"
            }
        },
        {
            "Battery": {
                "enable": false
            }
        }
    ]
}
